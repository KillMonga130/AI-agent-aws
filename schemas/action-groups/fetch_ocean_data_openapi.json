{
  "openapi": "3.0.0",
  "info": {
    "title": "Ocean Data Ingest API",
    "version": "1.0.0",
    "description": "Fetch ocean and weather data for maritime forecasting"
  },
  "paths": {
    "/fetch_ocean_data": {
      "post": {
        "description": "Fetch marine forecast data including waves, wind, currents, and temperature for a given location and time horizon",
        "parameters": [
          {
            "name": "latitude",
            "in": "query",
            "description": "Latitude coordinate (-90 to 90)",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "longitude",
            "in": "query",
            "description": "Longitude coordinate (-180 to 180)",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "forecast_hours",
            "in": "query",
            "description": "Number of forecast hours (1-168, default 48)",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 168
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully fetched ocean data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "bucket": {
                      "type": "string",
                      "description": "S3 bucket where data was stored"
                    },
                    "key": {
                      "type": "string",
                      "description": "S3 object key for the data"
                    },
                    "copernicus": {
                      "type": "string",
                      "description": "Copernicus integration status"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
